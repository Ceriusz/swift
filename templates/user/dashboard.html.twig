{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/dashboard.css') }}" rel="stylesheet" />
{% endblock %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container">
    <h1>Dashboard</h1>
    {% if app.user %}
      <div class="info">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
      </div>
      <div class="import">
        Import users from CSV <a href="{{ path('userImport') }}">Import</a>
      </div>
    {% endif %}
</div>
{% endblock %}
